<% include layout/header.ejs %>
<!-- Main Content -->
<main class="main-content">

    <!-- Best Seller Products -->
    <% home.items.forEach(function (section) { %>
    <section class="best-seller tc-padding">
        <div class="container">

            <!-- Main Heading -->
            <div class="main-heading-holder">
                <div class="main-heading style-1">
                    <h2> <span class="theme-color"><%= section.title %></span></h2>
                </div>
            </div>
            <!-- Main Heading -->

            <!-- Best sellers Tabs -->
            <div class="best-sellers-tabs">
                <div class="best-seller-slider">
                    <% section.data.forEach(function (book) { %>
                    <!-- Product Box -->
                    <div class="item">
                        <div class="product-box">
                            <div class="product-img">
                                <img src="<%= book.image.thumb_path %>" alt="<%= book.title %>">
                            </div>
                            <div class="product-detail">
                                <span>Novel</span>
                                <h5><a href="book-detail.html"> <%= book.title %></a></h5>
                                <p>Book Review...</p>
                                <div class="rating-nd-price">
                                    <ul class="rating-stars">
                                        <% for (var i=1; i <= book.avg_star; i++) {%>
                                        <li><i class="fa fa-star"></i></li>
                                        <% } %>
                                    </ul>
                                </div>
                                <div class="aurthor-detail">
                                    <span>Author: <%= book.author %></span>
                                    <a class="add-wish" href="#"><i class="fa fa-heart"></i></a>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- Product Box -->
                    <% }) %>
                </div>
            </div>
            <!-- Best sellers Tabs -->

        </div>
    </section>
    <!-- Best Seller Products -->
    <% }) %>
</main>
<!-- Main Content -->
<%- include layout/footer.ejs %>
